{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "target": "es6",
    "moduleResolution": "node",
    "module": "es6",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "declaration": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}